<div class="max-w-2xl mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">Request a Ride</h1>

  <%= form_with(model: @ride, class: "space-y-4") do |f| %>
    <div class="form-group">
      <%= f.label :pickup_location, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :pickup_location, 
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
          data: { 
            controller: "maps",
            action: "maps#initializeAutocomplete"
          } %>
    </div>

    <div class="form-group">
      <%= f.label :dropoff_location, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :dropoff_location,
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500",
          data: {
            controller: "maps",
            action: "maps#initializeAutocomplete"
          } %>
    </div>

    <div class="form-group">
      <%= f.label :scheduled_time, class: "block text-sm font-medium text-gray-700" %>
      <%= f.datetime_field :scheduled_time,
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div class="flex justify-end">
      <%= f.submit "Request Ride", 
          class: "bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2",
          data: { turbo_frame: "ride_request" } %>
    </div>
  <% end %>

  <%= turbo_frame_tag "ride_request" %>
</div> 